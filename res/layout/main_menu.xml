<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout android:gravity="bottom" 
		android:id="@+id/top_menu_tablayout"
		android:paddingTop="2.0dip" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TableRow android:gravity="center_vertical" android:id="@+id/menu_tabrow_1"
			android:background="@color/menu_layout_bg_color" android:paddingTop="1.0dip"
			android:paddingBottom="1.0dip" android:layout_width="fill_parent"
			android:layout_height="65.0dip">
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_refresh"
				android:background="@drawable/menu_background" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="1.0dip"
				android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_refresh" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="刷新" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_download_article"
				android:background="@drawable/menu_background" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="1.0dip"
				android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_download" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="离线下载" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_theme_change"
				android:background="@drawable/menu_background" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="1.0dip"
				android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_guide" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="新手指南" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_my_comment"
				android:background="@drawable/menu_background" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_comment" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="我的评论" />
			</LinearLayout>
		</TableRow>
		<TableRow android:gravity="center_vertical" android:id="@+id/menu_tabrow_2"
			android:background="@color/menu_layout_bg_color"
			android:layout_width="fill_parent" android:layout_height="65.0dip">
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_my_collect"
				android:background="@drawable/menu_background_below"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_mycollect" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="我的收藏" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_make_column"
				android:background="@drawable/menu_background_below"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_column" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="编辑栏目" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_setting"
				android:background="@drawable/menu_background_below"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_setting" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="设置" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_exit"
				android:background="@drawable/menu_background_below"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_quit" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="退出" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_child_home"
				android:background="@drawable/menu_background_below"
				android:visibility="gone" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="1.0dip"
				android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_home" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="子选项" />
			</LinearLayout>
		</TableRow>
	</TableLayout>
	<ImageView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:src="@drawable/menu_top_bg"
		android:layout_alignTop="@id/top_menu_tablayout" />
</RelativeLayout>
